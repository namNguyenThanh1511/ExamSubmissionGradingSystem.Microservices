{
  "ReverseProxy": {
    "Routes": {
      "iam-route": {
        "ClusterId": "iam-cluster",
        "Match": { "Path": "/iam/{**catch-all}" },
        "Transforms": [ { "PathRemovePrefix": "/iam" } ]
      },
      "course-route": {
        "ClusterId": "course-cluster",
        "Match": { "Path": "/course/{**catch-all}" },
        "Transforms": [ { "PathRemovePrefix": "/course" } ]
      },
      "submission-route": {
        "ClusterId": "submission-cluster",
        "Match": { "Path": "/submission/{**catch-all}" },
        "Transforms": [ { "PathRemovePrefix": "/submission" } ]
      },
      "swagger-iam": {
        "ClusterId": "iam-cluster",
        "Match": { "Path": "/swagger/iam/{**catch-all}" },
        "Transforms": [ { "PathRemovePrefix": "/swagger/iam" } ]
      },
      "swagger-course": {
        "ClusterId": "course-cluster",
        "Match": { "Path": "/swagger/course/{**catch-all}" },
        "Transforms": [ { "PathRemovePrefix": "/swagger/course" } ]
      },
      "swagger-submission": {
        "ClusterId": "submission-cluster",
        "Match": { "Path": "/swagger/submission/{**catch-all}" },
        "Transforms": [ { "PathRemovePrefix": "/swagger/submission" } ]
      }

    },
    "Clusters": {
      "iam-cluster": {
        "Destinations": {
          "dest": { "Address": "http://iam_api:8080/" } // docker service name
        }
      },
      "course-cluster": {
        "Destinations": {
          "dest": { "Address": "http://course_api:8080/" }
        }
      },
      "submission-cluster": {
        "Destinations": {
          "dest": { "Address": "http://submission_api:8080/" }
        }
      }
    }
  }
}
